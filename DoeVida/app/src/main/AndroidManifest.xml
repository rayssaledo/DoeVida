<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="projeto.les.doevida.doevida">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="tntstudios.com.br.gcmapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="tntstudios.com.br.gcmapp.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_laucher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="replace">
        <activity
            android:name=".views.UserCadastreActivity"
            android:label="@string/title_activity_user_cadastre" />
        <activity
            android:name=".views.DonorsActivity"
            android:label="@string/title_activity_donors" />
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".views.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.InformationActivity"
            android:label="@string/title_activity_information" />
        <activity
            android:name=".views.MoreInformation1Activity"
            android:label="@string/title_activity_information" />
        <activity
            android:name=".views.MoreInformation2Activity"
            android:label="@string/title_activity_information" />
        <activity
            android:name=".views.MoreInformation3Activity"
            android:label="@string/title_activity_information" />
        <activity
            android:name=".views.AcceptedOrderActivity"
            android:label="@string/title_activity_accepted_order" />
        <activity
            android:name=".views.NotificationsActivity"
            android:label="@string/title_activity_notification" />
        <activity
            android:name=".views.MyRequestsActivity"
            android:label="@string/title_activity_my_requests" />
        <activity
            android:name=".views.DonationOrderActivity"
            android:label="@string/title_activity_donation_order" />
        <activity
            android:name=".views.RequestedMeActivity"
            android:label="@string/title_activity_requested_me" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver
            android:name=".utils.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="projeto.les.doevida.doevida.utils" />
            </intent-filter>
        </receiver>

        <service android:name=".utils.GcmIntentService" />
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_blood_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_donor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome do usuário"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/iv_blood_type"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cidade do usuário"
            android:textSize="14sp"
            android:layout_below="@+id/tv_donor_name"
            android:layout_toEndOf="@+id/iv_blood_type"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/iv_donates"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/tv_donor_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_number_donates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="XXXXXXXX"
            android:textSize="14sp"
            android:layout_below="@+id/iv_donates"
            android:layout_alignEnd="@+id/tv_date_last_donation" />

        <TextView
            android:id="@+id/tv_last_donation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/label_last_donation"
            android:textSize="14sp"
            android:layout_alignTop="@+id/tv_date_last_donation"
            android:layout_toStartOf="@+id/tv_date_last_donation" />

        <TextView
            android:id="@+id/tv_date_last_donation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="XX/XX/XXXX"
            android:textSize="14sp"
            android:layout_below="@+id/tv_number_donates"
            android:layout_alignEnd="@+id/iv_donates" />

    </RelativeLayout>

</LinearLayout>
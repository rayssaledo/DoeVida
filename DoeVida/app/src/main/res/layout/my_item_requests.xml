<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_blood_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/blood_type"/>

    <TextView
        android:id="@+id/tv_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="@string/patient_name"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="@string/hospital_name"
        android:textSize="14sp"
        android:layout_below="@+id/tv_patient_name"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="@string/city_name"
        android:textSize="14sp"
        android:layout_below="@+id/tv_hospital_name"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_state_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="@string/state_name"
        android:textSize="14sp"
        android:layout_below="@+id/tv_city_name"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_share_black_24dp"
            android:contentDescription="@string/img_share"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_last_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/donation_deadline"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/tv_state_name"
        android:layout_alignTop="@+id/tv_deadline"
        android:layout_toStartOf="@+id/tv_deadline" />

    <TextView
        android:id="@+id/tv_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentEnd="true"
        android:paddingTop="10dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/hint_date_last_donation"
        android:textSize="14sp"
        android:layout_below="@+id/tv_state_name" />


</RelativeLayout>

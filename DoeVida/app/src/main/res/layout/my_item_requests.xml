<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/iv_blood_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/blood_type"/>

    <TextView
        android:id="@+id/tv_donor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="@string/hint_name_user"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="Hospital"
        android:textSize="14sp"
        android:layout_below="@+id/tv_donor_name"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="@string/hint_city_user"
        android:textSize="14sp"
        android:layout_below="@+id/tv_hospital_name"
        android:layout_toEndOf="@+id/iv_blood_type"
        android:layout_marginTop="2dp"/>


    <TextView
        android:id="@+id/tv_last_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Data limite para doação"
        android:textSize="14sp"
        android:paddingTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/tv_deadline"
        android:layout_below="@+id/tv_hospital_name"
        android:layout_alignTop="@+id/tv_date_last_donation"
        android:layout_toStartOf="@+id/tv_date_last_donation" />

    <TextView
        android:id="@+id/tv_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentEnd="true"
        android:paddingTop="30dp"
        android:layout_marginEnd="8dp"
        android:hint="00/00/00"
        android:textSize="14sp"
        android:layout_below="@+id/tv_hospital_name" />

</LinearLayout>
